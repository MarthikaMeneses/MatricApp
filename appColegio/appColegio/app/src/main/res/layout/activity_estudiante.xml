<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstudianteActivity"
    tools:layout_editor_absoluteX="-4dp"
    tools:layout_editor_absoluteY="70dp">

    <Button
        android:id="@+id/btnRegresarEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="3dp"
        android:text="Regresar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/txtTelefonoEstudiante"
        app:layout_constraintTop_toBottomOf="@+id/btnEjecutar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="7dp"
        android:text="Documento"
        app:layout_constraintBottom_toBottomOf="@+id/txtDocumentoEstudiante"
        app:layout_constraintEnd_toStartOf="@+id/txtDocumentoEstudiante"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtDocumentoEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtNombreEstudiante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="15dp"
        android:text="Nombre"
        app:layout_constraintEnd_toStartOf="@+id/txtNombreEstudiante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtNombreEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtApellidoEstudiante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/txtDocumentoEstudiante" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="32dp"
        android:text="Estudiante"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/txtDocumentoEstudiante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="9dp"
        android:text="Apellido"
        app:layout_constraintBottom_toBottomOf="@+id/txtApellidoEstudiante"
        app:layout_constraintEnd_toStartOf="@+id/txtApellidoEstudiante"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtApellidoEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtDireccionEstudiante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreEstudiante" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="1dp"
        android:text="Dirección"
        app:layout_constraintEnd_toStartOf="@+id/txtDireccionEstudiante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtDireccionEstudiante" />

    <EditText
        android:id="@+id/txtDireccionEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/txtTelefonoEstudiante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txtApellidoEstudiante" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="11dp"
        android:text="Teléfono"
        app:layout_constraintEnd_toStartOf="@+id/txtTelefonoEstudiante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtTelefonoEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/txtDireccionEstudiante" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="10dp"
        android:entries="@array/spOpcionesEstudiante"
        app:layout_constraintBottom_toTopOf="@+id/btnEjecutar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spOpcionesEstudiante"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefonoEstudiante" />

    <TextView
        android:id="@+id/spOpcionesEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="104dp"
        android:text="Opciones"
        app:layout_constraintBottom_toBottomOf="@+id/btnRegresarEstudiante"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtTelefonoEstudiante" />

    <Button
        android:id="@+id/btnEjecutar"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:text="Ejecutar"
        app:icon="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toTopOf="@+id/btnRegresarEstudiante"
        app:layout_constraintStart_toStartOf="@+id/btnRegresarEstudiante"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />
</androidx.constraintlayout.widget.ConstraintLayout>